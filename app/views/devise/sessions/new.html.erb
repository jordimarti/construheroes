<div class="continguts">
  <div class="row">
    <div class="col-lg-4 col-md-6 ml-auto mr-auto">
      <div class="inici-sessio-container">
        <h1 class="text-center">Iniciar sessió</h1>

        <br/>
        <br/>
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-group">
            <%= f.email_field :email, autofocus: true, placeholder: 'Correu electrònic', class: 'form-control' %>
          </div>

          <div class="form-group">
            <%= f.password_field :password, autocomplete: "off", placeholder: 'Contrasenya', class: 'form-control' %>
          </div>

          <div class="form-group">
            <%= f.submit "Entrar", class: "btn btn-primary btn-block btn-lg" %>
          </div>
        <% end %>

        <div class="text-center">
          <%= link_to "Registrar-se", new_registration_path(resource_name) %>
        </div>
      </div>
    </div>
  </div>
</div>