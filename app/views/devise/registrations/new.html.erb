<% 
paraula = ('a'..'z').to_a.shuffle[0,8].join
email_inventat = paraula + '@hey.com'
password_inventat = 'bicicleta'
%>

<div class="continguts">
  <div class="row">
    <div class="col-lg-4 col-md-6 ml-auto mr-auto">
      <div class="inici-sessio-container">
        <h1 class="text-center">Registrar-se</h1>

        <br/>
        <br/>
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= devise_error_messages! %>

          <%= f.hidden_field :email, :value => email_inventat %>
          <%= f.hidden_field :password, :value => password_inventat %>
          <%= f.hidden_field :password_confirmation, :value => password_inventat %>

          <div class="form-group">
            <%= f.text_field :first_name, autofocus: true, class: 'form-control', placeholder: "Nom" %>
          </div>

          <div class="form-group">
            <%= f.text_field :last_name, autofocus: true, class: 'form-control', placeholder: "Cognoms" %>
          </div>

          <div class="form-group">
            <%= f.submit "Entra", class: "btn btn-primary btn-block btn-lg" %>
          </div>
        <% end %>

      </div>
    </div>
  </div>
</div>